{
    "name": "GitHub Pages Dev environment",
    "build": {
        "dockerfile": "Dockerfile.dev",
        "context": "..",
        "args": {}
    },
    "forwardPorts": [4000],
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "installOhMyZsh": true,
            "configureZshAsDefaultShell": true,
            "username": "vscode"
        }
    },
    "customizations": {
      "vscode": {
        "extensions": [
            "Shopify.ruby-lsp",
            "ms-azuretools.vscode-docker"
        ]
      }
    }
  }